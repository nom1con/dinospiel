<Window x:Class="dinospiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dinospiel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="jump">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="White">
            <Rectangle HorizontalAlignment="Center" Height="2" Stroke="Black" VerticalAlignment="Top" Width="833" Fill="Black" Canvas.Top="370" Canvas.Left="-33"/>
            <Image x:Name="dino" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="100" Source="/dino.png" Canvas.Left="60" Canvas.Top="295
                   "/>
            <Button x:Name="BTNplay" Content="Press to Play" HorizontalAlignment="Left" VerticalAlignment="Top" Height="108" Width="324" FontSize="48" Click="BTNplay_Click" Canvas.Left="238" Canvas.Top="70"/>
            <Label Content="Score:" Canvas.Left="10" Canvas.Top="10" Height="33" Width="56" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
            <Label x:Name="lblScore" Content="0" Canvas.Left="83" Canvas.Top="10" Height="33" Width="56" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" />
            <Label x:Name="lblTutorial" Content="SPACE to jump" Canvas.Left="83" Canvas.Top="247"/>
        </Canvas>

    </Grid>
</Window>
